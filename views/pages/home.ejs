<%- include('../partials/navbar') %>
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>TechMinds Students Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    html { font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; }
  </style>
</head>
<body class="min-h-screen bg-slate-50 text-slate-800">

  <!-- Header / Hero -->
  <header class="bg-white mt-20 border-b border-slate-200">
    <div class="mx-auto max-w-6xl px-4 py-8 text-center">
      <div class="inline-flex items-center gap-2 rounded-xl bg-blue-600 text-white px-3 py-1 text-xs font-semibold">Learn With The Geeks</div>
      <h1 class="mt-3 text-3xl sm:text-4xl font-extrabold text-slate-900">Tech Minds Academy Portal</h1>
      <p class="mt-2 text-sm sm:text-base text-slate-600">Sign in, access your courses, check payments, and manage your profile — all in one place.</p>
      <div class="mt-5 flex flex-wrap items-center justify-center gap-3">
        <a href="/login" class="rounded-xl bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-700">Login</a>
        <a href="/register" class="rounded-xl border border-slate-300 bg-white px-4 py-2.5 text-sm font-semibold hover:bg-slate-50">Create Account</a>
        <a href="/forgot" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Forgot Password?</a>
      </div>
    </div>
  </header>

  <!-- Features (Direct + Minimal) -->
  <main class="mx-auto max-w-6xl px-4 py-10">
    <section>
      <h2 class="text-xl font-bold">Portal Features</h2>
      <div class="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <!-- Courses -->
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="flex items-center gap-3">
            <div class="grid h-10 w-10 place-items-center rounded-lg bg-blue-600/10 text-blue-700">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 19.5A2.5 2.5 0 0 0 6.5 22h11A2.5 2.5 0 0 0 20 19.5V6H4z"/><path d="M4 6V4a2 2 0 0 1 2-2h8l6 6"/></svg>
            </div>
            <div>
              <h3 class="font-semibold">My Courses</h3>
              <p class="text-sm text-slate-600">View lessons, track progress, and download resources.</p>
            </div>
          </div>
          <div class="mt-3"><a href="/portal/courses" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Open →</a></div>
        </article>
        <!-- Payments -->
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="flex items-center gap-3">
            <div class="grid h-10 w-10 place-items-center rounded-lg bg-blue-600/10 text-blue-700">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
            </div>
            <div>
              <h3 class="font-semibold">Payments</h3>
              <p class="text-sm text-slate-600">See invoices, pay fees, and view receipts.</p>
            </div>
          </div>
          <div class="mt-3"><a href="/portal/payments" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Open →</a></div>
        </article>
        <!-- Profile -->
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="flex items-center gap-3">
            <div class="grid h-10 w-10 place-items-center rounded-lg bg-blue-600/10 text-blue-700">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M16 21v-2a4 4 0 0 0-4-4H7a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
            </div>
            <div>
              <h3 class="font-semibold">Profile</h3>
              <p class="text-sm text-slate-600">Update your details and security settings.</p>
            </div>
          </div>
          <div class="mt-3"><a href="/portal/profile" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Open →</a></div>
        </article>
        <!-- Timetable -->
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="flex items-center gap-3">
            <div class="grid h-10 w-10 place-items-center rounded-lg bg-blue-600/10 text-blue-700">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
            </div>
            <div>
              <h3 class="font-semibold">Class Timetable</h3>
              <p class="text-sm text-slate-600">Check session dates and times.</p>
            </div>
          </div>
          <div class="mt-3"><a href="/portal/timetable" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Open →</a></div>
        </article>
        <!-- Announcements -->
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="flex items-center gap-3">
            <div class="grid h-10 w-10 place-items-center rounded-lg bg-blue-600/10 text-blue-700">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 11V7a4 4 0 0 1 4-4h10a4 4 0 0 1 4 4v4"/><path d="M7 15h10"/><path d="M17 19H7"/><path d="M7 11h10"/></svg>
            </div>
            <div>
              <h3 class="font-semibold">Announcements</h3>
              <p class="text-sm text-slate-600">Latest updates from the academy.</p>
            </div>
          </div>
          <div class="mt-3"><a href="/portal/announcements" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Open →</a></div>
        </article>
        <!-- Support -->
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <div class="flex items-center gap-3">
            <div class="grid h-10 w-10 place-items-center rounded-lg bg-blue-600/10 text-blue-700">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 13a3 3 0 0 1-6 0V8a6 6 0 1 1 12 0v5"/><path d="M13 21h8"/></svg>
            </div>
            <div>
              <h3 class="font-semibold">Help & Support</h3>
              <p class="text-sm text-slate-600">Get help from the team.</p>
            </div>
          </div>
          <div class="mt-3"><a href="mailto:admissions@techminds.academy" class="text-sm font-semibold text-blue-700 hover:text-blue-800">Email Support →</a></div>
        </article>
      </div>
    </section>

    <!-- Quick Links (simple text list) -->
    <section class="mt-10">
      <h2 class="text-xl font-bold">Quick Links</h2>
      <ul class="mt-3 grid gap-2 sm:grid-cols-2 lg:grid-cols-3 text-sm">
        <li><a class="block rounded-lg border border-slate-200 bg-white px-3 py-2 hover:bg-slate-50" href="/register">New Student Registration</a></li>
        <li><a class="block rounded-lg border border-slate-200 bg-white px-3 py-2 hover:bg-slate-50" href="/login">Student Login</a></li>
        <li><a class="block rounded-lg border border-slate-200 bg-white px-3 py-2 hover:bg-slate-50" href="/forgot">Reset Password</a></li>
        <li><a class="block rounded-lg border border-slate-200 bg-white px-3 py-2 hover:bg-slate-50" href="/portal">Go to Portal Dashboard</a></li>
        <li><a class="block rounded-lg border border-slate-200 bg-white px-3 py-2 hover:bg-slate-50" href="/courses">Browse Courses</a></li>
        <li><a class="block rounded-lg border border-slate-200 bg-white px-3 py-2 hover:bg-slate-50" href="/contact">Contact Academy</a></li>
      </ul>
    </section>
  </main>

  <!-- Footer -->
  <footer class="mt-10 border-t border-slate-200 bg-white">
    <div class="mx-auto max-w-6xl px-4 py-6 text-sm text-slate-600">© <span id="year"></span> TechMinds Academy. All rights reserved.</div>
  </footer>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
</html>
